extends ./recipe-layout
include ./mixins

block title
  title= name

block header
  header
    h1= name
    amp-img(src=image.url width=image.width height=image.height alt='picture')
    p= description

block socialShare
  div
    amp-social-share(
      type='facebook' width='45' height='33'
      data-attribution=254325784911610
    )
    //- amp-social-share(
    //-   type='whatsapp' layout='container'
    //-   data-share-endpoint='whatsapp://send'
    //-   data-param-text='Check out this article: TITLE - CANONICAL_URL'
    //- )
    //-   | Share on Whatsapp
    amp-social-share(type='gplus' width='45' height='33')
    amp-social-share(type='email' width='45' height='33')
    amp-social-share(
      type='twitter' width='45' height='33'
      data-param-text='Amazing recipe that my friend made'
    )
    amp-social-share(type='pinterest' width='45' height='33')

block ingredients
  h2= 'Ingredients'
  p.yield= 'Yield: ' + recipeYield
  ul
    each ingredient in recipeIngredient
      li= ingredient

block instructions
  h2= 'Directions'
  time.duration(datetime=totalTime)= moment.duration(totalTime).format(() => 'h [hr] mm [min]')
  ol
    each instruction in recipeInstructions.split(/\s*\d+\.?\s*/).slice(1)
       li= instruction
