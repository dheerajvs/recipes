extends ./base

block header
  header
    h1= 'Kitchen'

block content
  article
    div.recipe-list
      each recipe in recipes
        div.recipe-item.link-container
          amp-img(
            src=recipe.image.url alt=recipe.name
            width=recipe.image.width height=recipe.image.height
          )
          div= recipe.name
          a(href=`${dashify(recipe.name)}.html`)
            span.link-spanner
